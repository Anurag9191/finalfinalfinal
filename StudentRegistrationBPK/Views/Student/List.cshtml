@model List<StudentRegistrationBPK.Models.Student>

<style>
    body{
        background-color: aquamarine
    }
    .logout-container {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .logout-button {
        background-color: #fff;
        color: #000;
        border: 1px solid #000;
        padding: 5px 10px;
    }
</style>

<h1>Registered Users</h1>

@*<div>
    <form method="get" action="/Student/Search">
        <input type="text" name="search" placeholder="Enter Email Id" />
        <button type="submit">Search</button>
    </form>
</div>*@

<div class="logout-container">
    <form id="logoutForm" method="get" action="/Student/Login">
        @Html.AntiForgeryToken()
        <button type="submit" class="logout-button">Logout</button>
    </form>
</div>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Date Of Birth</th>
                <th>Parent Name</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <th>@user.FirstName</th>
                    <th>@user.LastName</th>
                    <th>@user.Phone</th>
                    <th>@user.Dob</th>
                    <th>@user.ParentName</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}