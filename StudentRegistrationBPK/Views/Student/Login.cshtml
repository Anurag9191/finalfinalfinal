@model StudentRegistrationBPK.Models.Login 
<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        form {
            display: inline-block;
            margin-top: 50px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #555;
        }

        input[type="number"],
        input[type="date"] {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button[type="submit"] {
            margin-top: 10px;
            padding: 8px 20px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        p {
            margin-top: 20px;
            font-size: 14px;
        }

        a {
            color: #0099cc;
        }
    </style>
</head>
<body>
    <h1>Login</h1>

    <form method="post" action="Login">
        <label for="phone" asp-for="Phone">Phone Number:</label>
        <input type="number" id="phoneNumber" name="phone" required>

        <label for="parentName" asp-for="ParentName">Parent Name</label>
        <input type="text" id="parentName" name="parentName" required><br />

        <button type="submit" asp-controller="Student" asp-action="Login">Login</button>
    </form>

    <p>Don't have an account? <a asp-controller="Student" asp-action="Register">Register</a></p>
   @* <p>Forgot your email or password? <a href="forgot.html">Forgot User</a></p>*@
</body>
</html>